            "EmailRequest": {
                "required": [
                    "email",
                    "captcha",
                    "uuid"
                ],
                "properties": {
                    "email": {
                        "description": "电子邮箱地址",
                        "type": "string",
                        "example": "x@aa.com"
                    },
                    "captcha": {
                        "description": "图片验证码",
                        "type": "string",
                        "example": "1234"
                    },
                    "uuid": {
                        "description": "图片验证码UUID",
                        "type": "string",
                        "example": "abc"
                    }
                },
                "type": "object"
            },
            "MobileRequest": {
                "required": [
                    "mobile",
                    "captcha",
                    "uuid"
                ],
                "properties": {
                    "mobile": {
                        "description": "手机号码",
                        "type": "string",
                        "example": "13901889999"
                    },
                    "captcha": {
                        "description": "图片验证码",
                        "type": "string",
                        "example": "1234"
                    },
                    "uuid": {
                        "description": "图片验证码UUID",
                        "type": "string",
                        "example": "abc"
                    }
                },
                "type": "object"
            },
            "LoginRequest": {
                "required": [
                    "username",
                    "password",
                    "captcha",
                    "uuid"
                ],
                "properties": {
                    "username": {
                        "description": "登录用户名",
                        "type": "string",
                        "example": "name"
                    },
                    "password": {
                        "description": "登录密码",
                        "type": "string",
                        "example": "md5密码"
                    },
                    "captcha": {
                        "description": "图片验证码",
                        "type": "string",
                        "example": "1234"
                    },
                    "uuid": {
                        "description": "图片验证码UUID",
                        "type": "string",
                        "example": "abc"
                    },
                    "remember": {
                        "description": "记住我",
                        "type": "string",
                        "example": "off"
                    }
                },
                "type": "object"
            },
            "LoginSmsRequest": {
                "required": [
                    "mobile",
                    "code"
                ],
                "properties": {
                    "mobile": {
                        "description": "手机号码",
                        "type": "string",
                        "example": "13901889999"
                    },
                    "code": {
                        "description": "短信验证码",
                        "type": "string",
                        "example": "123456"
                    }
                },
                "type": "object"
            },
            "ResetRequest": {
                "required": [
                    "mobile",
                    "password",
                    "captcha",
                    "uuid"
                ],
                "properties": {
                    "mobile": {
                        "description": "手机号码",
                        "type": "string",
                        "example": "13901889999"
                    },
                    "password": {
                        "description": "登录密码",
                        "type": "string",
                        "example": "123456aA"
                    },
                    "captcha": {
                        "description": "图片验证码",
                        "type": "string",
                        "example": "1234"
                    },
                    "uuid": {
                        "description": "图片验证码UUID",
                        "type": "string",
                        "example": "abc"
                    }
                },
                "type": "object"
            },
            "SignupEmailRequest": {
                "required": [
                    "email",
                    "code",
                    "accept_term"
                ],
                "properties": {
                    "email": {
                        "description": "电子邮箱地址",
                        "type": "string",
                        "example": "x@qq.com"
                    },
                    "code": {
                        "description": "短信验证码",
                        "type": "string",
                        "example": "123456"
                    },
                    "accept_term": {
                        "description": "是否接受注册协议",
                        "type": "boolean",
                        "example": true
                    }
                },
                "type": "object"
            },
            "SignupMobileRequest": {
                "required": [
                    "mobile",
                    "code",
                    "accept_term"
                ],
                "properties": {
                    "mobile": {
                        "description": "手机号码",
                        "type": "string",
                        "example": "13901889999"
                    },
                    "code": {
                        "description": "短信验证码",
                        "type": "string",
                        "example": "123456"
                    },
                    "accept_term": {
                        "description": "是否接受注册协议",
                        "type": "boolean",
                        "example": true
                    }
                },
                "type": "object"
            },
            "LoginResponse": {
                "properties": {
                    "token": {
                        "description": "用户JSON Web Token凭证",
                        "type": "string",
                        "example": "123456"
                    },
                    "expiresIn": {
                        "description": "凭证有效时间，单位：秒",
                        "type": "integer",
                        "example": "123456"
                    }
                },
                "type": "object"
            },
            "OptionResponse": {
                "properties": {
                    "name": {
                        "description": "名称",
                        "type": "string",
                        "example": "name"
                    },
                    "val": {
                        "description": "值",
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            },
            "PaginateLinkVo": {
                "properties": {
                    "url": {
                        "description": "链接URL",
                        "type": "string"
                    },
                    "label": {
                        "description": "页标签",
                        "type": "string"
                    },
                    "next": {
                        "description": "当前页",
                        "type": "boolean"
                    }
                },
                "type": "object"
            }
